{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil - Donkey Luminaires{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f8f9fa;
    }
    .navbar-brand {
        color: #FF6900 !important;
        font-weight: bold;
        font-size: 2rem;
        letter-spacing: 1px;
    }
    .text-orange {
        color: #FF6900 !important;
    }
    .bg-orange {
        background: #FF6900 !important;
        color: #fff !important;
    }
    .btn-orange {
        background-color: #FF6900 !important;
        color: #fff !important;
        border-radius: 2rem;
        border: none;
        transition: background 0.2s;
    }
    .btn-orange:hover {
        background: #e35d02 !important;
        color: #fff !important;
    }
    .price {
        color: #34B37F;
        font-size: 1.1rem;
        font-weight: bold;
    }
</style>

{# FontAwesome CDN pour les icônes #}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<nav class="navbar navbar-expand-lg bg-white border-bottom shadow-sm mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('home') }}">Donkey Luminaires</a>
    </div>
</nav>

<div class="container">

    <div class="row mb-4">
        <!-- Catégories -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title text-orange mb-3">Catégories de luminaires :</h4>
                    <ul class="list-unstyled ms-2">
                        <li><i class="fa fa-couch text-secondary me-2"></i>Salon</li>
                        <li><i class="fa fa-tree text-secondary me-2"></i>Extérieur</li>
                        <li><i class="fa fa-bed text-secondary me-2"></i>Chambre</li>
                        <li><i class="fa fa-briefcase text-secondary me-2"></i>Bureau</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Espace Client -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title text-orange mb-3">Espace Client</h4>
                    <ul class="list-unstyled ms-2">
                        <li><i class="fa fa-user-edit text-secondary me-2"></i>Infos personnelles <span class="text-success">(modifiables)</span></li>
                        <li><i class="fa fa-history text-secondary me-2"></i>Historique des commandes</li>
                        <li><i class="fa fa-credit-card text-secondary me-2"></i>Suivi des paiements</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Produits en vedette -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title text-orange mb-4">Produits en vedette</h4>
            <div class="row align-items-center">
                <div class="col-auto">
                    <div class="bg-light d-flex align-items-center justify-content-center rounded" style="width:90px; height:70px;">
                        <i class="fa fa-lightbulb fa-2x text-orange"></i>
                    </div>
                </div>
                <div class="col">
                    <strong class="fs-5" style="color:#223056;">Lampe Design Scandinave</strong>
                    <div class="text-muted small mb-2">Élégante lampe pour salon, style nordique moderne.</div>
                </div>
                <div class="col-auto price">79,99&nbsp;€</div>
            </div>
            <div class="text-center mt-3">
                <a href="#" class="btn btn-orange px-4 py-2 fw-bold">Voir tout le catalogue</a>
            </div>
        </div>
    </div>

    <!-- Connexion / Inscription -->
    <div class="card shadow-sm text-center mb-5">
        <div class="card-body">
            <h4 class="card-title text-orange mb-3">Connexion / Inscription</h4>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="{{ path('app_login') }}" class="btn btn-orange px-4 py-2 fw-bold mb-2 mb-md-0">Se connecter</a>
                <a href="{{ path('app_register') }}" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-bold">Créer un compte</a>
            </div>
        </div>
    </div>

</div>
{% endblock %}
